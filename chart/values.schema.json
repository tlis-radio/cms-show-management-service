{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "spec": {
      "properties": {
        "replicas": {
          "type": "integer"
        },
        "imagePullSecrets": {
          "type": "string"
        }
      }
    },
    "config": {
      "properties": {
        "connectionStrings": {
          "type": "object",
          "properties": {
            "postgres": {
              "type": "string"
            }
          }
        },
        "jwt": {
          "type": "object",
          "properties": {
            "audience": {
              "type": "string"
            },
            "authority": {
              "type": "string"
            },
            "requireHttpsMetadata": {
              "type": "boolean"
            }
          }
        },
        "otel": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string"
            },
            "endpoint": {
              "type": "string"
            },
            "headers": {
              "type": "string"
            }
          }
        },
        "cmsServices": {
          "type": "object",
          "properties": {
            "userManagement": {
              "type": "object",
              "properties": {
                "baseAddress": {
                  "type": "string"
                },
                "tokenEndpoint": {
                  "type": "string"
                },
                "clientId": {
                  "type": "string"
                },
                "clientSecret": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}