        },
        "imagePullSecrets": {
          "type": "string"
        }
      }
    },
    "config": {
      "properties": {
        "connectionStrings": {
          "type": "object",
          "properties": {
            "postgres": {
              "type": "string"
            },
            "storageAccount": {
              "type": "string"
            }
          }
        },
        "jwt": {
          "type": "object",
          "properties": {
            "audience": {
              "type": "string"
            },
            "authority": {
              "type": "string"
            },
            "requireHttpsMetadata": {
              "type": "boolean"
            }
          }
        },
        "serviceUrls": {
          "type": "object",
          "properties": {
            "storageAccount": {
              "type": "string"
            }
          }
        }
      }
    }
  }
