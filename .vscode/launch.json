    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Webapi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Tlis.Cms.ShowManagement/Api/src/bin/Debug/net8.0/Tlis.CMS.ShowManagement.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Tlis.Cms.ShowManagement/Api/src",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Cli apply migrations",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-cli",
            "program": "${workspaceFolder}/src/Tlis.Cms.ShowManagement.Cli/bin/Debug/net8.0/Tlis.Cms.ShowManagement.Cli.dll",
            "args": ["migration"],
            "cwd": "${workspaceFolder}/src/Tlis.Cms.ShowManagement.Cli",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}